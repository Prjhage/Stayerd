<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="Stayerd - Discover unique vacation rentals, apartments, and homes for your perfect stay. Book instantly, 24/7 support, verified hosts. Over 5,000+ properties in 100+ cities worldwide."
    />
    <meta
      name="keywords"
      content="vacation rentals, accommodation booking, holiday homes, airbnb alternative, stay rental, property booking, travel accommodation"
    />
    <meta name="author" content="Stayerd Team" />
    <meta name="robots" content="index, follow" />
    <meta
      property="og:title"
      content="Stayerd - Book Unique Accommodations Worldwide"
    />
    <meta
      property="og:description"
      content="Find and book unique places to stay. 5,000+ verified properties with 24/7 support and best price guarantee."
    />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://stayerd.com" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Stayerd - Book Unique Accommodations" />
    <meta
      name="twitter:description"
      content="Discover and book verified vacation rentals worldwide"
    />

    <!-- Structured Data for Search Engines -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "WebSite",
        "name": "Stayerd",
        "url": "https://stayerd.com",
        "description": "Book unique vacation rentals and accommodations worldwide",
        "potentialAction": {
          "@type": "SearchAction",
          "target": {
            "@type": "EntryPoint",
            "urlTemplate": "https://stayerd.com/listings?search={search_term_string}"
          },
          "query-input": "required name=search_term_string"
        }
      }
    </script>

    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "Stayerd",
        "url": "https://stayerd.com",
        "logo": "https://stayerd.com/images/logo1.png",
        "description": "Vacation rental and accommodation booking platform",
        "sameAs": [
          "https://www.facebook.com/stayerd",
          "https://www.twitter.com/stayerd",
          "https://www.instagram.com/stayerd"
        ]
      }
    </script>

    <title>
      Stayerd - Book Unique Vacation Rentals & Accommodations Online
    </title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    />
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/rating.css" />
    <!-- for map -->
    <link
      rel="stylesheet"
      href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
    />
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script src="/js/amenities.js"></script>
  </head>

  <body class="d-flex flex-column min-vh-100">
    <%- include('../includes/navbar') %>
    <div class="container flex-grow-1">
      <%- include('../includes/flash') %> <%- body %>
    </div>
    <%- include('../includes/footer') %>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script src="/js/script.js"></script>
    <script src="/js/ui.js"></script>
  </body>
</html>
