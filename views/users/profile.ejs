<% layout("./layouts/boilerplate") -%>

<style>
  .profile-container {
    max-width: 1100px;
    margin: 2rem auto;
    padding: 1rem;
    animation: fadeUp 0.4s ease;
  }

  .profile-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .avatar {
    width: 60px;
    height: 60px;
    background: #222;
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.4rem;
    object-fit: cover;
  }

  .avatar-upload {
    position: relative;
    cursor: pointer;
    border-radius: 50%;
    overflow: hidden;
    transition: transform 0.2s ease;
  }

  .avatar-upload:hover {
    transform: scale(1.05);
  }

  .avatar-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.6);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
    color: white;
    font-size: 1.2rem;
  }

  .avatar-upload:hover .avatar-overlay {
    opacity: 1;
  }

  .profile-tabs {
    display: flex;
    gap: 1rem;
    margin-bottom: 1.5rem;
    flex-wrap: wrap;
  }

  .tab-btn {
    border: none;
    background: #f1f1f1;
    padding: 0.6rem 1.2rem;
    border-radius: 20px;
    cursor: pointer;
    transition: all 0.25s ease;
  }

  .tab-btn.active {
    background: #ff385c;
    color: white;
  }

  .tab-panel {
    display: none;
    animation: fadeUp 0.3s ease;
  }

  .tab-panel.active {
    display: block;
  }

  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
    gap: 1.2rem;
  }

  .card {
    background: white;
    border-radius: 14px;
    overflow: hidden;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
    transition: transform 0.25s ease;
    display: flex;
    flex-direction: column;
  }

  .card:hover {
    transform: translateY(-4px);
  }

  .card img {
    width: 100%;
    height: 160px;
    object-fit: cover;
  }

  .card h5 {
    margin: 0.6rem;
  }

  .card p {
    margin: 0 0.6rem 0.6rem;
    font-size: 0.9rem;
  }

  .price {
    font-weight: 600;
  }

  .empty {
    text-align: center;
    color: #777;
    margin-top: 1rem;
  }
  /* ---------- BUTTON STRUCTURE ---------- */

  .booking-card-actions,
  .my-listing-actions {
    padding: 0.6rem;
    margin-top: auto;
  }

  .booking-card-actions {
    display: flex;
    flex-direction: column;
    gap: 0.7rem;
  }

  .primary-actions {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0.6rem;
  }

  .danger-zone {
    margin-top: 0.6rem;
    padding-top: 0.6rem;
    border-top: 1px dashed #f2b4b4;
  }

  .card .btn {
    width: 100%;
    border-radius: 12px;
    font-size: 0.85rem;
    padding: 0.5rem;
  }

  .btn-cancel {
    background: #fff;
    color: #dc3545;
    border: 1px solid #dc3545;
    font-weight: 600;
  }

  .btn-cancel:hover {
    background: #dc3545;
    color: #fff;
  }

  .btn-delete {
    font-weight: 600;
  }

  @media (max-width: 768px) {
    .primary-actions {
      grid-template-columns: 1fr;
    }
    .card .btn {
      min-height: 44px;
      font-size: 0.9rem;
    }
  }

  @keyframes fadeUp {
    from {
      opacity: 0;
      transform: translateY(12px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

<div class="profile-container">
  <!-- USER HEADER -->
  <div class="profile-header">
    <div class="avatar-upload">
      <% if (user.avatar && typeof user.avatar === 'object' && user.avatar.url)
      { %>
      <img src="<%= user.avatar.url %>" alt="Profile Picture" class="avatar" />
      <% } else if (user.avatar && typeof user.avatar === 'string') { %>
      <img src="<%= user.avatar %>" alt="Profile Picture" class="avatar" />
      <% } else { %>
      <div
        class="avatar"
        style="
          background: #222;
          color: white;
          display: flex;
          align-items: center;
          justify-content: center;
          font-size: 1.4rem;
        "
      >
        <i class="fa-solid fa-user"></i>
      </div>
      <% } %>
      <div class="avatar-overlay">
        <i class="fa-solid fa-camera"></i>
      </div>
      <form
        action="/profile/photo"
        method="POST"
        enctype="multipart/form-data"
        style="display: none"
      >
        <input
          type="file"
          name="avatar"
          accept="image/*"
          onchange="this.form.submit()"
        />
      </form>
    </div>
    <div>
      <h3><%= user.username %></h3>
      <p><%= user.email %></p>
      <small class="text-muted">Click avatar to change profile photo</small>
    </div>
  </div>

  <!-- TABS -->
  <div class="profile-tabs">
    <button class="tab-btn active" data-tab="wishlist">‚ù§Ô∏è Wishlist</button>
    <button class="tab-btn" data-tab="bookings">üì¶ Bookings</button>
    <button class="tab-btn" data-tab="mylistings">üè† My Listings</button>
  </div>

  <!-- WISHLIST -->
  <div class="tab-panel active" id="wishlist">
    <% if (wishlistListings.length === 0) { %>
    <p class="empty">No wishlist items yet.</p>
    <% } %>

    <div class="grid">
      <% wishlistListings.forEach(l => { %>
      <div class="card">
        <img src="<%= l.image.url %>" />
        <h5><%= l.title %></h5>
        <p>‚Çπ <%= l.price %> / night</p>
        <a href="/listings/<%= l._id %>" class="btn btn-light">View</a>
      </div>
      <% }) %>
    </div>
  </div>

  <!-- BOOKINGS -->
  <div class="tab-panel" id="bookings">
    <% if (bookings.length === 0) { %>
    <p class="empty">No bookings yet.</p>
    <% } %>

    <div class="grid">
      <% bookings.forEach(b => { %> <% if (b.listing) { %>
      <div class="card">
        <img src="<%= b.listing.image.url %>" />
        <h5><%= b.listing.title %></h5>

        <p>
          <%= b.startDate.toDateString() %> ‚Üí <%= b.endDate.toDateString() %>
        </p>

        <p class="price">‚Çπ <%= b.totalPrice %></p>

        <!-- Booking Status Badge -->
        <div class="mb-2">
          <span class="badge bg-secondary text-capitalize">
            <%= b.status %>
          </span>
        </div>

        <!-- Weather Preview on Card -->
        <% if (b.travelCompanion && b.travelCompanion.weather &&
        b.travelCompanion.weather.temp && b.travelCompanion.weather.temp !==
        'N/A') { %>
        <p style="font-size: 0.95rem; margin-bottom: 0.5rem; color: #444">
          <i class="fa-solid fa-cloud-sun text-primary"></i>
          <strong><%= b.travelCompanion.weather.temp %></strong> ‚Ä¢ <%=
          b.travelCompanion.weather.condition %>
        </p>
        <% } %>

        <!-- ‚úÖ ADD SMART TRAVEL COMPANION HERE -->
        <% if (b.travelCompanion) { %>
        <button
          type="button"
          class="btn btn-outline-primary btn-sm mt-2"
          data-bs-toggle="modal"
          data-bs-target="#aiModal-<%= b._id %>"
        >
          ‚ú® View AI Plan
        </button>
        <% } %>

        <!-- EXISTING ACTION BUTTONS -->
        <div class="booking-card-actions">
          <a href="/bookings/<%= b._id %>/pdf" class="btn btn-dark">
            Download Invoice
          </a>

          <div class="danger-zone">
            <form action="/bookings/<%= b._id %>?_method=DELETE" method="POST">
              <button class="btn btn-cancel">Cancel Booking</button>
            </form>
          </div>

          <a href="/listings/<%= b.listing._id %>" class="btn btn-info">
            View
          </a>
        </div>
      </div>
      <% } %> <% }) %>
    </div>
  </div>

  <!-- MY LISTINGS -->
  <div class="tab-panel" id="mylistings">
    <% if (!myListings || myListings.length === 0) { %>
    <p class="empty">You haven‚Äôt created any listings yet.</p>
    <a href="/listings/new" class="btn btn-dark mt-2">Become a Host</a>
    <% } %>

    <div class="grid">
      <% myListings.forEach(l => { %>
      <div class="card">
        <img src="<%= l.image.url %>" />
        <h5><%= l.title %></h5>
        <p>‚Çπ <%= l.price %> / night</p>

        <div class="my-listing-actions">
          <div class="primary-actions">
            <a href="/listings/<%= l._id %>" class="btn btn-info">View</a>
            <a href="/listings/<%= l._id %>/edit" class="btn btn-warning"
              >Edit</a
            >
          </div>

          <div class="danger-zone">
            <form action="/listings/<%= l._id %>?_method=DELETE" method="POST">
              <button class="btn btn-danger btn-delete">Delete Listing</button>
            </form>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
</div>

<!-- AI PLAN MODALS -->
<% bookings.forEach(b => { %> <% if (b.travelCompanion) { %>

<div class="modal fade" id="aiModal-<%= b._id %>" tabindex="-1">
  <div
    class="modal-dialog modal-xl modal-dialog-centered modal-dialog-scrollable"
  >
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">üß≠ Smart Travel Companion</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
        ></button>
      </div>

      <div class="modal-body">
        <!-- WEATHER -->
        <% if (b.travelCompanion.weather?.temp) { %>
        <div class="alert alert-info mb-4">
          üå§ <strong>Weather:</strong>
          <%= b.travelCompanion.weather.temp %> | <%=
          b.travelCompanion.weather.condition %> | Humidity: <%=
          b.travelCompanion.weather.humidity %>
        </div>
        <% } %>

        <!-- PLACES -->
        <% if (b.listing.travelCompanion && b.listing.travelCompanion.places &&
        b.listing.travelCompanion.places.length) { %>
        <h5 class="text-primary mb-3">üìç Places to Visit</h5>
        <div class="row g-3 mb-4">
          <% b.listing.travelCompanion.places.forEach(p => { %>
          <div class="col-md-4">
            <div class="card shadow-sm h-100">
              <img
                src="<%= p.image || '/images/placeholder.jpg' %>"
                class="card-img-top"
                style="height: 180px; object-fit: cover"
              />
              <div class="card-body text-center">
                <h6 class="fw-bold"><%= p.name %></h6>
              </div>
            </div>
          </div>
          <% }) %>
        </div>
        <% } %>

        <!-- FOOD -->
        <% if (b.listing.travelCompanion && b.listing.travelCompanion.food &&
        b.listing.travelCompanion.food.length) { %>
        <h5 class="text-primary mb-3">üçΩ Local Food</h5>
        <div class="row g-3 mb-4">
          <% b.listing.travelCompanion.food.forEach(f => { %>
          <div class="col-md-3">
            <div class="card shadow-sm h-100">
              <img
                src="<%= f.image || '/images/placeholder-food.jpg' %>"
                class="card-img-top"
                style="height: 160px; object-fit: cover"
              />
              <div class="card-body text-center">
                <h6 class="fw-bold"><%= f.name %></h6>
              </div>
            </div>
          </div>
          <% }) %>
        </div>
        <% } %>

        <!-- DAY PLAN -->
        <% if (b.travelCompanion.plan?.length) { %>
        <h5 class="text-primary mb-3">üóì Day-wise Itinerary</h5>
        <ul class="list-group">
          <% b.travelCompanion.plan.forEach(day => { %>
          <li class="list-group-item"><%= day %></li>
          <% }) %>
        </ul>
        <% } %>
        <h6 class="text-primary mt-3">
          <i class="fa-solid fa-wallet"></i> Daily Budget Estimate
        </h6>

        <ul class="list-group list-group-flush">
          <li class="list-group-item">
            üçΩ Food: <%= b.travelCompanion.budget.food %>
          </li>
          <li class="list-group-item">
            üöï Transport: <%= b.travelCompanion.budget.transport %>
          </li>
          <li class="list-group-item">
            üéü Attractions: <%= b.travelCompanion.budget.attractions %>
          </li>
          <li class="list-group-item fw-bold">
            üìä Total / day: <%= b.travelCompanion.budget.dailyTotal %>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>

<% } %> <% }) %>

<script>
  document.querySelectorAll(".tab-btn").forEach((btn) => {
    btn.addEventListener("click", () => {
      document
        .querySelectorAll(".tab-btn")
        .forEach((b) => b.classList.remove("active"));
      document
        .querySelectorAll(".tab-panel")
        .forEach((p) => p.classList.remove("active"));
      btn.classList.add("active");
      document.getElementById(btn.dataset.tab).classList.add("active");
    });
  });

  // Profile photo upload functionality
  document
    .querySelector(".avatar-upload")
    .addEventListener("click", function () {
      const fileInput = this.querySelector('input[type="file"]');
      fileInput.click();
    });
</script>
